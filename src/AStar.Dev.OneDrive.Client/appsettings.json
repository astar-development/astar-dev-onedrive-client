{
  "EntraId": {
    "ClientId": "3057f494-687d-4abb-a653-4b8066230b6e",
    "Scopes": [
      "User.Read",
      "Files.ReadWrite.All",
      "offline_access"
    ],
    "RedirectUri": "http://localhost"
  },
  "Authentication": {
    "ClientId": "3057f494-687d-4abb-a653-4b8066230b6e",
    "RedirectUri": "http://localhost",
    "Authority": "https://login.microsoftonline.com/common",
    "Scopes": [
      "Files.ReadWrite",
      "User.Read",
      "offline_access"
    ]
  },
  "AStarDevOneDriveClient": {
    "ApplicationVersion": "1.0.0",
    "CacheTag": 1,
    "UserPreferencesPath": "astar-dev/astar-dev-onedrive-client",
    "UserPreferencesFile": "user-preferences.json",
    "OneDriveRootDirectory": "OneDrive-Sync",
    "CachePrefix": "AStarDevOneDriveClient_V"
  },
  "Serilog": {
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithSpan",
      "WithExceptionDetails"
    ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs\\log.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
                "formatter": "Serilog.Formatting.Compact.RenderedCompactJsonFormatter, Serilog.Formatting.Compact"
              }
            }
          ]
        }
      }
    ],
    "Properties": {
      "ApplicationName": "AStar.Dev.OneDrive.Client"
    },
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "AStar": "Debug"
      }
    }
  },
  "Logging": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "AStar": "Debug"
      }
    },
    "Console": {
      "FormatterName": "json",
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": true,
        "TimestampFormat": "HH:mm:ss ",
        "UseUtcTimestamp": true,
        "JsonWriterOptions": {
          "Indented": true
        }
      }
    },
    "ApplicationInsights": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft.AspNetCore": "Warning",
        "AStar": "Debug"
      }
    }
  }
}
